<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#222222">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/fragment_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menu">
        <!--<include layout="@layout/fragment_upcoming_alarm"/>-->
    </FrameLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_alarm"
            android:src="@drawable/ic_alarm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="loadPendingAlarmFragment"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_setting"
            android:src="@drawable/ic_settings"
            app:layout_constraintLeft_toRightOf="@+id/button_alarm"
            app:layout_constraintRight_toLeftOf="@+id/button_music"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="loadSettingFragment"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_music"
            android:src="@drawable/ic_music"
            app:layout_constraintLeft_toRightOf="@+id/button_setting"
            app:layout_constraintRight_toLeftOf="@+id/button_stop"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_stop"
            android:src="@drawable/ic_stop"
            app:layout_constraintLeft_toRightOf="@+id/button_music"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>